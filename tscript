


server=(testserver testserver2 testserver3)

echo ""
echo "#top--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------#"
echo ""
for ((i=0;i<3;i++))
do
echo "#${server[i]}"
ssh -t ${server[i]} top -n 1 | grep %Cpu | awk '{print ($2)}' 
echo ""
done

echo ""
echo "#free -g---------------------------------------------------------------------------------------------------------------------------------------------------------------------------#"
echo ""
for ((i=0;i<3;i++))
do
echo "#${server[i]}"
#ssh ${server[i]} free -g | awk '{print (NR==1?"type":$1),(NR==1?"used":$3)}' | column -t"
ssh ${server[i]} free -g | grep Mem: | awk '{print ($3)}'
echo ""
done

echo ""
echo "Disk Usage-------------------------------------------------------------------------------------------------------------------------------------------------------------------------#" 
echo ""
for ((i=0;i<3;i++))
do
echo "#${server[i]}" 
ssh -t ${server[i]} df -h / /boot
echo ""
done
echo ""
